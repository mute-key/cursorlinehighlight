{
    "name": "cursorlinehighlight",
    "publisher": "mutekey",
    "displayName": "CursorLineHighlight",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.96.0"
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "icon": "./misc/icon2.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/mute-key/cursorlinehighlight"
    },
    "content": {
        "baseContentUrl": "https://github.com/mute-key/cursorlinehighlight/blob/master/",
        "baseImagesUrl": "https://github.com/mute-key/cursorlinehighlight/raw/master/"
    },
    "keywords": [
        "cursor",
        "line",
        "highlight",
        "selection",
        "range"
    ],
    "categories": [
        "Themes",
        "Visualization",
        "Other"
    ],
    "extensionKind": [
        "ui",
        "workspace"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "configuration": {
            "title": "CursorLine Highlight Settings",
            "properties": {
                "cursorlinehighlight.cursorOnly_isWholeLine": {
                    "type": "boolean",
                    "default": true,
                    "description": "isWholeLine"
                },
                "cursorlinehighlight.cursorOnly_borderColor": {
                    "type": [
                        "string"
                    ],
                    "default": "#65EAB9",
                    "description": "Change the border color. (Ex: 'red', '#FFF' #FFFFFFF, 'RGB(255,255,255)','RGB(255, 255, 255. 0.5) )"
                },
                "cursorlinehighlight.cursorOnly_borderWidth": {
                    "type": [
                        "string"
                    ],
                    "default": "2px"
                },
                "cursorlinehighlight.cursorOnly_borderStyle": {
                    "type": [
                        "string"
                    ],
                    "enum": [
                        "solid",
                        "dashed",
                        "inset",
                        "double",
                        "groove",
                        "outset",
                        "ridge"
                    ],
                    "default": "solid"
                },
                "cursorlinehighlight.singleLine_isWholeLine": {
                    "type": "boolean",
                    "default": false,
                    "description": "isWholeLine"
                },
                "cursorlinehighlight.singleLine_borderColor": {
                    "type": [
                        "string"
                    ],
                    "default": "#ff0000",
                    "description": "Change the border color. (Ex: 'red', '#FFF' #FFFFFFF, 'RGB(255,255,255)','RGB(255, 255, 255. 0.5) )"
                },
                "cursorlinehighlight.singleLine_borderWidth": {
                    "type": [
                        "string"
                    ],
                    "default": "2px"
                },
                "cursorlinehighlight.singleLine_borderStyle": {
                    "type": [
                        "string"
                    ],
                    "enum": [
                        "solid",
                        "dashed",
                        "inset",
                        "double",
                        "groove",
                        "outset",
                        "ridge"
                    ],
                    "default": "solid"
                },
                "cursorlinehighlight.multiLine_isWholeLine": {
                    "type": "boolean",
                    "default": true,
                    "description": "isWholeLine"
                },
                "cursorlinehighlight.multiLine_borderColor": {
                    "type": [
                        "string"
                    ],
                    "default": "#00ff00",
                    "description": "Change the border color. (Ex: 'red', '#FFF' #FFFFFFF, 'RGB(255,255,255)','RGB(255, 255, 255. 0.5) )"
                },
                "cursorlinehighlight.multiLine_borderWidth": {
                    "type": [
                        "string"
                    ],
                    "default": "2px"
                },
                "cursorlinehighlight.multiLine_borderStyle": {
                    "type": [
                        "string"
                    ],
                    "enum": [
                        "solid",
                        "dashed",
                        "inset",
                        "double",
                        "groove",
                        "outset",
                        "ridge"
                    ],
                    "default": "solid"
                },
                "cursorlinehighlight.multiCursor_isWholeLine": {
                    "type": "boolean",
                    "default": false,
                    "description": "isWholeLine"
                },
                "cursorlinehighlight.multiCursor_borderColor": {
                    "type": [
                        "string"
                    ],
                    "default": "#0000ff",
                    "description": "Change the border color. (Ex: 'red', '#FFF' #FFFFFFF, 'RGB(255,255,255)','RGB(255, 255, 255. 0.5) )"
                },
                "cursorlinehighlight.multiCursor_borderWidth": {
                    "type": [
                        "string"
                    ],
                    "default": "2px"
                },
                "cursorlinehighlight.multiCursor_borderStyle": {
                    "type": [
                        "string"
                    ],
                    "enum": [
                        "solid",
                        "dashed",
                        "inset",
                        "double",
                        "groove",
                        "outset",
                        "ridge"
                    ],
                    "default": "solid"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "pnpm run package",
        "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
        "watch": "npm-run-all -p watch:*",
        "watch:esbuild": "node esbuild.js --watch",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
        "check-types": "tsc --noEmit",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/vscode": "^1.96.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "20.x",
        "@typescript-eslint/eslint-plugin": "^8.17.0",
        "@typescript-eslint/parser": "^8.17.0",
        "eslint": "^9.16.0",
        "esbuild": "^0.24.0",
        "npm-run-all": "^4.1.5",
        "typescript": "^5.7.2",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1"
    }
}